<div class="container full-page font-oswald">
  <h1 class="text-center m-4 font-oswald">Add a new art</h1>

  <%= simple_form_for(@art) do |f| %>
    <%= f.input :name %>
    <%= f.input :artist %>

    <div style="display: flex; justify-content: space-between;">
      <%= f.input :category, collection: Art::CATEGORIES %>
      <%= f.input :style, collection: Art::STYLES %>
      <%= f.input :subject, collection: Art::SUBJECTS %>
    </div>

    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file, required: true, input_html: { class: 'd-none' }, label_html: { class: 'btn new-button'}, wrapper_html: { class: 'middle-button'}, label: "ðŸ“· <span class='ml-2'>Upload A Photo</span>".html_safe %>

    <div class="fr">
      <%= f.submit class: "btn new-button" %>
    </div>

    <div class="fr">
      <%= link_to 'Back', root_path, class: "btn hide-button middle-button" %>
    </div>

  <% end %>

</div>

